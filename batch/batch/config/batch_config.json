{
  "batch": {
    "max_workers": 4,
    "default_quantity": 100,
    "retry_count": 3,
    "delay_between_tasks": 1.0
  },
  "browser": {
    "headless": false,
    "window_size": [
      1920,
      1080
    ],
    "timeout": 30
  },
  "logging": {
    "level": "INFO",
    "file": "logs/batch_manager.log"
  },
  "telegram": {
    "enabled": true,
    "bot_token": "${TELEGRAM_BOT_TOKEN}",
    "chat_id": "${TELEGRAM_CHAT_ID}",
    "notify_start": true,
    "notify_complete": true,
    "notify_error": true,
    "notify_warning": true
  }
}